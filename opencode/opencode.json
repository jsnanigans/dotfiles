{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    ".cursor/rules/*.md",
    "GLOBAL.md",
    "AGENTS.md",
    "CLAUDE.md",
    "~/.claude/CLAUDE.md",
    "~/.config/opencode/GLOBAL.md"
  ],
  "mcp": {
    "playwright": {
      "type": "local",
      "command": ["mcpm", "--server=playwright", "--agent=opencode"],
      "enabled": true
    },
    "web-search": {
      "type": "local",
      "command": ["mcpm", "--server=web-search", "--agent=opencode"],
      "enabled": true
    },
    "atlassian": {
      "type": "local",
      "command": ["mcpm", "--server=mcp-atlassian", "--agent=opencode"],
      "enabled": true
    }
  }
}
