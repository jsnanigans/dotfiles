{
  "enableAllProjectMcpServers": false,
  "permissions": {
    "allow": [
      "Bash(rg *)",
      "Bash(fd *)",
      "Bash(jq *)",
      "Edit(./**/*.md)",
      "Read(./**/*.md)",
      "Write(./**/*.md)"
    ],
    "deny": [
      "Bash(curl:*)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)"
    ]
  },
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "OTEL_METRICS_EXPORTER": "otlp"
  }
}
